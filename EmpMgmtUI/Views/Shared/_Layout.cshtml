<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="/scripts/jquery/jquery.js"></script>
    <script src="/css/bootstrap/js/bootstrap.js"></script>
    <link rel="stylesheet" href="/css/bootstrap/css/bootstrap.min.css"/>
</head>
<body>
    <div id="header" class="col-md-12" style="margin:4px;height:150px">
        <h1 class="text-center">Employee management MVC Core</h1>
    </div>
    <div class="row">
        <div id="left" class="col-md-2" style="height:500px">
            @{
                int roleid = 1;
            }
            @if (roleid == 1)
            {
                @Html.Partial("_AdminOptions")
                 @*<partial name="_AdminOptions"></partial>*@
            }
            else if (roleid == 2)
            {
                @Html.Partial("_EmployeeOptions")
                @*<partial name="_EmployeeOptions"></partial>*@
            }
        </div>
        <div id="main" class="col-md-10" style="height:500px">
            @*The @RenderBody() statement in the main div renders the content of the child views that inherit from this layout.*@
            @RenderBody()
        </div>
    </div>
</body>
</html>
